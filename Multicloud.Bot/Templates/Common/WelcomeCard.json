{
  "type": "AdaptiveCard",
  "body": [
      {
          "type": "ColumnSet",
          "columns": [
              {
                  "type": "Column",
                  "width": "stretch",
                  "items": [
                      {
                          "type": "TextBlock",
                          "text": "${Title}",
                          "wrap": true,
                          "horizontalAlignment": "Left",
                          "weight": "Bolder",
                          "size": "Large",
                          "color": "Dark"
                      },
                      {
                          "type": "Image",
                          "url": "${Logo}",
                          "horizontalAlignment": "Right"
                      }
                  ]
              }
          ]
      },
      {
          "type": "TextBlock",
          "text": "Hi ${Username}!\nWelcome, how can I help you today?",
          "wrap": true,
          "weight": "Bolder"
      },
      {
          "type": "ActionSet",
          "actions": [
              {
                  "type": "Action.Submit",
                  "title": "Get Started"
              },
              {
                  "type": "Action.OpenUrl",
                  "title": "Visit Us"
              }
          ]
      }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5"
}